{% extends 'base_admin.html.twig' %}

{% block body %}
    <h3 class="well-lg">Eliminar</h3>
    <h5 class="alert alert-danger">Esta acción eliminará todo el conjunto de datos de un usuario,local,menús,cometarios... etc</h5>
    <table class="table table-hover">
        <tr><td>Local</td><td>Propietario</td><td>Eliminar</td></tr>
    {% for local in locales %}
        <tr>
            <td>{{ local.nombre }} </td>
            <td>{{ local.propietario.username }} </td>
            <td>
                <a href="{{ path('eliminartodo',{'local': local.id}) }}" class="btn btn-danger"><i class="fa fa-plus-square"></i>Borrar</a><br>


            </td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}

